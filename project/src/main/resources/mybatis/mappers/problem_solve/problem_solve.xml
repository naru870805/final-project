<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pr.problem_solve">
	<resultMap id="problem_solve_result" type="problem_VO">
		<result property="pro_num" column="pro_num" />
		<result property="pro_content" column="pro_content" />
		<result property="pro_category" column="pro_category" />
		<result property="pro_tag" column="pro_tag" />
	</resultMap>
	
	<resultMap id="problem_example_result" type="problemExample_VO">
	</resultMap>
	<resultMap id="pro_collection_result" type="proCollection_VO">
	</resultMap>
	<resultMap id="userResult" type="java.util.HashMap">
	</resultMap>


	<select id="searchList" resultMap="problem_solve_result" parameterType="java.util.Map"> 
      <![CDATA[
         select pro_num,pro_content,pro_category,pro_tag,pro_name
         from   PROBLEM
      ]]>
	</select>
	
	<select id="searchListCategory" resultMap="problem_solve_result" parameterType="java.util.Map"> 
      <![CDATA[
         select pro_num,pro_content,pro_category,pro_tag,pro_name
         from   PROBLEM
      ]]>
      	<where>
			<if test=" category != ''  and  category != null">
				pro_category = #{category}
			</if>
		</where>
	</select>
	
	<select id="searchProblem" resultMap="problem_solve_result" parameterType="java.util.Map"> 
      <![CDATA[
         select *
         from   PROBLEM
      ]]>
      	<where>
			<if test=" pro_num != ''  and  pro_num != null">
				pro_num = #{pro_num}
			</if>
		</where>
	</select>
	
	<select id="searchExample" resultMap="problem_example_result" parameterType="java.util.Map"> 
      <![CDATA[
         select *
         from   pro_choice
      ]]>
      	<where>
			<if test=" pro_num != ''  and  pro_num != null">
				pro_num = #{pro_num}
			</if>
		</where>
	</select>
	
	<select id="selectProByCol_num" resultMap="userResult" parameterType="java.util.Map">
		<![CDATA[
			select *
			from problem p, pro_collection c, col_list l
		]]>
		<where>
			p.pro_num = l.pro_num and l.col_num = c.col_num
			<if test=" col_num != ''  and  col_num != null">
				and <![CDATA[c.col_num]]> = #{col_num}
			</if>
		</where>
		order by col_list_num asc
	</select>
</mapper>